 @import "normalize.styl"
 @import "fonts.styl"

gris_oscuro = #333333
gris_claro  = #818181
rojo        = #BD255B

a 
  text-decoration none
body
  font-size 16px
  font-family 'Varela Round', sans-serif
figure
  margin 0
img 
  vertical-align top
.button-menu
  color gris_oscuro
  left .5em
  margin-top -10px
  position absolute
  top 50%
.container
  font-size 0
  padding 1.4rem
  text-align center
//  La siguiente clase es para los botones
.action
  color white
  margin-right .5em
  font-size 1.2em
  &:last-child
    margin-right 0
  &.gray
    color gris_claro
.actions
  position absolute
  bottom 0
  left 0
  right 0
  //background rgba(0,0,0,.3)
  background rgba(black, 0.3)
.menu
  display none
.relative
  position relative
.padding
  padding 1em
.padding-tb
  padding 1em 0
.progress
  margin 1em 0
  position relative  
  .min
  .max
    font-size .8em
    top -5px
  .min
    position absolute
    left 0
  .max
    position absolute
    right 0
  .total
    background gris_claro
    border-radius 5px
    height 5px
    width 75%
    margin 0 auto
  .state
    background rojo
    border-radius 5px
    height 5px
    width 30%
    position relative
  .circle
    background gris_oscuro
    border-radius 50%
    height 10px
    width 10px
    position absolute
    right 0
    top -2px
    
.border-bottom
  border-bottom 1px solid gris_claro
.name
  color gris_oscuro
.author
  color gris_claro
.center-block
  margin 0 auto
.center-text
  text-align center
.right-text
  text-align right
.header
  height 3.5em
  .title
     font-size 1.1em
     line-height 3.5em
     margin 0
     text-align center
.song
  display inline-block
  font-size 1rem
  margin-bottom 1em
  margin-right 1em
  text-align: left
  width 8rem
  width 8rem
  &:nth-child(even)
    margin-right 0
  p
    margin .5em 0
    //margin 4 parametros top right bottom left
    //margin 2 parametros top/bottom  right/left
.playing
  &.small
    width 20em