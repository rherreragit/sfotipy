@import "nib"
@import "normalize.styl"
@import "fonts.styl"

//vendor-prefixes = webkit o moz papitas
//animacion(parametro)
//  -webkit-animation parametro
//  -moz-animation parametro
//  -o-animation parametro
//  -ms-animation parametro
//  animation parametro

gris_oscuro = #333333
gris_claro  = #818181
rojo        = #BD255B
gris_mas_claro = #F0F0F0

a 
  text-decoration none
body
  font-size 16px
  font-family 'Varela Round', sans-serif
figure
  margin 0
img 
  vertical-align top
ul
  margin 0
  padding 0
.button-menu
  color gris_oscuro
  left .5em
  margin-top -10px
  position absolute
  top 50%
.container
  font-size 0
  padding 1.4rem
  text-align center
//  La siguiente clase es para los botones
.action
  color white
  margin-right .5em
  font-size 1.2em
  &:last-child
    margin-right 0
  &.gray
    color gris_claro
.actions
  position absolute
  bottom 0
  left 0
  right 0
  //background rgba(0,0,0,.3)
  background rgba(black, 0.3)
.menu
  display none
.relative
  position relative
.padding
  padding 1em
.padding-tb
  padding 1em 0
.left
  float left
.right
  float right
.wrap
  width 1000px
.round
  border-radius 50%
  overflow hidden
.progress
  margin 1em 0
  position relative
  .min
  .max
    font-size .8em
    position absolute
    top -5px
  .min
    left 0
  .max
    right 0
  .total
    background gris_claro
    border-radius 5px
    height 5px
    width 75%
    margin 0 auto
  .state
    background rojo
    border-radius 5px
    height 5px
    width 30%
    position relative
    animation 10s state infinite linear
  .circle
    background gris_oscuro
    border-radius 50%
    height 10px
    width 10px
    position absolute
    right 0
    top -2px
    animation 1s circle infinite
@keyframes state
  from 
    width 0
  to
    width 100%
@keyframes circle
  0%
    transform scale(1)
  100%
    transform scale(2)
    opacity 0
.border-bottom
  border-bottom 1px solid gris_claro
.name
  color gris_oscuro
.author
  color gris_claro
.center-block
  margin 0 auto
.center-text
  text-align center
.right-text
  text-align right
.header
  height 3.5em
  .title
     font-size 1.1em
     line-height 3.5em
     margin 0
     text-align center
.song
  display inline-block
  font-size 1rem
  margin-bottom 1em
  margin-right 1em
  text-align: left
  width 8rem
  width 8rem
  &:nth-child(even)
    margin-right 0
  p
    margin .5em 0
//margin 4 parametros top right bottom left
//margin 2 parametros top/bottom  right/left
.playing
  &.small
    width 20em
    margin 0 auto
.input
  border 1px solid gris_claro
  height 2.5em
  border-radius 5px
  padding 0 1em 0 2em
.search-icon
  position absolute
  left .5em
  top .8em
  color gris_claro
.close-icon
  position absolute
  top .5em
  color gris_claro
  right .5em
  font-size 1.2em
.playlist
  width 22em
  padding 0 2em
  border-left 1px solid gris_claro
  display none
  .list
    list-style none
  .item
    padding 1em 0
  .action
    font-size .8em
.isotipo
  width 122px
.logo
  padding 1.3em 0
  overflow hidden
  background white
  display none
.avatar
  width 38px
  height 38px
.username
  color gris_claro
  position relative
  top 9px
  margin-left .5em
  &:after
    content ""
    border-left 7px solid transparent
    border-top 9px solid gris_claro
    border-right 7px solid transparent
    //border-bottom 10px solid black
  display inline-block
    margin-left .4em

@media screen and (min-width:480px)
//  body
//    background red
  .song
    &:nth-child(even)
      margin-right 1em
  .image
    img
      width 100%
      height auto
  .playing
    &.medium
      width auto
@media screen and (min-width:1000px)
  body
    background gris_mas_claro
  .button-menu
    display none
  .playing
    padding-top 1.3em
    &.large
      margin 0 auto
      width 62.5em
      overflow hidden
  .menu
    display block
    background gris_mas_claro
    overflow hidden
    border-top 1px solid gris_claro
    .item
      float left
      list-style none
      a
        color gris_oscuro
        text-transform uppercase
        cursor pointer
        padding 1em
        display block
        //Elmina la animacion del mover el texto hacia abajo
        border-top 5px solid transparent
        &:hover
          border-top 5px solid gris_oscuro
  .music
    width 32.5em
    float left
    .description
      display none
  .header
    height auto
    border none
    .title
      display none
  .logo
  .playlist
    display block
